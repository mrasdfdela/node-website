<% include ../partials/header %>

<div class="row">
    <div class="col-xs-6 col-xs-offset-3">
        <div>
            <h3>Edit Recipe</h3>
            <p>For Editing & Updating recipes.</p>
        </div>
        <form action="/recipes/<%= recipe._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <div class="input-group">
                    <input type="text" class="form-control" value="<%= recipe.title %>" aria-describedby="basic-addon3" name="editedRecipe[title]" style="display:inline">
                    <input type="text" class="form-control" value="<%= recipe.image %>" aria-describedby="basic-addon3" name="editedRecipe[image]" style="display:inline">
                </div>
                <div class="input-group">
                    <label for="coment">Enter in the recipe description here:</label>
                    <br>
                    <textarea rows="10" name="editedRecipe[description]" style="width:157%"><%= recipe.description%></textarea>
                </div>
            </div>
            <a class="btn btn-default" href="./">Back to Recipe</a></button>
            <input class="btn btn-success" type="submit">
        </form>
    </div>
</div>

<% include ../partials/footer %>