

<% if(is_phone){%>
	<% include ./partials/headerMobile %>	
<% } else if (is_desktop) { %>
	<% include ./partials/header %>
<% } %>

	<title>Tip Calculator</title>
	<link rel="stylesheet" type="text/css" href="../../stylesheets/tipCalculator.css">

	<div id="billHeader">
		<div id="totalBillLabels">
			<div class="col">Total Bill</div>
			<div class="col">Tax %</div>
			<div class="col">Tip %</div>
			<div></div>
		</div>
		<div id="totalBillNums">
			<div class="col">---</div>
			<div class="col"><input id="taxPercent" type="number" name="taxPercent" value="6.625"></div>
			<div class="col"><input id="tipPercent" type="number" name="tipPercent" value="18"></div>
			<div>
				<span id="addPersonMobile">
					<i class="fas fa-user-plus"></i>
				</span>
			</div>
		</div>
	</div>
	<div class="row">
			<span id="addPersonDesktop">
				<i class="fas fa-user-plus fa-stack"></i>
			</span>
			<table>
				<tr id="personRow">
					<td>
						<div id="addDishMobile">
							<span class="fa-stack fa-2x">
						        <i class="fas fa-circle fa-stack-2x"></i>
						        <i class="fas fa-utensils fa-stack"></i>
							</span>
					        <i class="fas fa-plus"></i>
						</div>
						<div id="addDishDesktop">
							Add Dish
						</div>
					</td>
					<td><input type="text" name="p0" placeholder="Person 1"></td>
					<td><input type="text" name="p1" placeholder="Person 2"></td>
					<td></td>
				</tr>
				<tr class="dishRow">
					<td>
						<input type="number" name="d0" placeholder="Dish Price">
					</td>
					<td><input type="checkbox" class="d0 p0" name=""></td>
					<td><input type="checkbox" class="d0 p1" name=""></td>
					<td class="dishSubTotal">-</td>

				</tr>			
				<tr class= "dishRow">
					<td><input type="number" name="d1" placeholder="Dish Price"></td>
					<td><input type="checkbox" class="d1 p0" name=""></td>
					<td><input type="checkbox" class="d1 p1" name=""></td>
					<td class="dishSubTotal">-</td>
				</tr>			
				<tr id="totalsRow">
					<td>Subtotals</td>
					<td><p>-</p></td>
					<td><p>-</p></td>
					<td></td>
				</tr>
			</table>
			<br>
